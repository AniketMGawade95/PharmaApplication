@model IEnumerable<PharmaAPIConsuming.DTO.CustomerDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddCustomer">Add New Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
                <td>
                    @Html.ActionLink("Edit", "EditCustomer", new { id = item.CustomerId }) |
                    @Html.ActionLink("Details", "GetCustomer", new { id = item.CustomerId }) |
                    <form asp-action="DeleteCustomer" asp-controller="Customer" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.CustomerId" />
                        <button type="submit" class="btn btn-link" onclick="return confirm('Are you sure you want to delete this customer?')">Delete</button>
                    </form>
                </td>

        </tr>
}
    </tbody>
</table>
