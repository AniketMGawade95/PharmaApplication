@using PharmaAPIConsuming.DTO
@model RegisterDTO


<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
	<meta name="description" content="Smarthr - Bootstrap Admin Template">
	<meta name="keywords" content="admin, estimates, bootstrap, business, html5, responsive, Projects">
	<meta name="author" content="Dreams technologies - Bootstrap Admin Template">
	<meta name="robots" content="noindex, nofollow">
	<title>PharmaSuits</title>

	<!-- Favicon -->
	<link rel="shortcut icon" type="image/x-icon" href="">

	<!-- Apple Touch Icon -->
	<link rel="apple-touch-icon" sizes="180x180" href="~/content/assets/img/apple-touch-icon.png">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="~/content/assets/css/bootstrap.min.css">

	<!-- Feather CSS -->
	<link rel="stylesheet" href="~/content/assets/plugins/icons/feather/feather.css">

	<!-- Tabler Icon CSS -->
	<link rel="stylesheet" href="~/content/assets/plugins/tabler-icons/tabler-icons.css">

	<!-- Fontawesome CSS -->
	<link rel="stylesheet" href="~/content/assets/plugins/fontawesome/css/fontawesome.min.css">
	<link rel="stylesheet" href="~/content/assets/plugins/fontawesome/css/all.min.css">

	<!-- Main CSS -->
	<link rel="stylesheet" href="~/content/assets/css/style.css">

</head>

<body class="bg-white">

	<div id="global-loader" style="display: none;">
		<div class="page-loader"></div>
	</div>

	<!-- Main Wrapper -->
	<div class="main-wrapper">

		<div class="container-fuild">
			<div class="w-100 overflow-hidden position-relative flex-wrap d-block vh-100">
				<div class="row">
					<div class="col-lg-5">
						<div class="d-lg-flex align-items-center justify-content-center d-none flex-wrap vh-100 bg-primary-transparent">
							<div>
								<img src="~/content/assets/img/bg/authentication-bg-02.svg" alt="Img">
							</div>
						</div>
					</div>
					<div class="col-lg-7 col-md-12 col-sm-12">
						<div class="row justify-content-center align-items-center vh-100 overflow-auto flex-wrap ">
							<div class="col-md-7 mx-auto vh-100">
								<form action="" method="post" class="vh-100">
									<div class="vh-100 d-flex flex-column justify-content-between p-4 pb-0">
										<div class=" mx-auto mb-5 text-center">
											@* <img src="" class="img-fluid" alt="Logo"> *@
										</div>
										<div class="">
											<div class="text-center mb-3">
												<h2 class="mb-2">Sign Up</h2>
												<p class="mb-0">Please enter your details to sign up</p>
											</div>
											<div class="mb-3">
												<label class="form-label">User Name</label>
												<div class="input-group">
													<input type="text" asp-for="Username" value="" class="form-control border-end-0">
													<span class="input-group-text border-start-0">
														<i class="ti ti-user"></i>
													</span>
												</div>
											</div>

											<div class="mb-3">
												<label class="form-label">User Email</label>
												<div class="input-group">
													<input type="text" asp-for="UserEmail" value="" class="form-control border-end-0">
													<span class="input-group-text border-start-0">
														<i class="ti ti-user"></i>
													</span>
												</div>
											</div>
											
											<div class="mb-3">
												<label class="form-label">Password</label>
												<div class="pass-group">
													<input type="password" asp-for="PasswordHash" class="pass-input form-control">
													<span class="ti toggle-password ti-eye-off"></span>
												</div>
											</div>

											<div class="form-group">
												<label class="control-label">Branch Name</label>
												<select asp-for="BranchId" class="form-control" asp-items="@ViewBag.branch"></select>
												<span asp-validation-for="BranchId" class="text-danger"></span>
											</div>

											<input asp-for="RoleId" value="2" hidden />
											<input asp-for="CreatedDate" value="@DateTime.Now" hidden />
											<input asp-for="CreatedBy" value="System" hidden />
											<input asp-for="UpdatedBy" value="System" hidden />
											<br />
											<br />
											
											<div class="mb-3">
												<button type="submit" class="btn btn-primary w-100">Sign Up</button>
											</div>
											<div class="text-center">
												<h6 class="fw-normal text-dark mb-0">
													Already have an account?
													<a href="login-2.html" class="hover-a">Sign In</a>
												</h6>
											</div>
											<div class="login-or">
												<span class="span-or">Or</span>
											</div>
											<div class="mt-2">
												<div class="d-flex align-items-center justify-content-center flex-wrap">
													

													<div class="text-center me-2 flex-fill">
														<a href="javascript:void(0);"
														   class="br-10 p-2 btn btn-outline-light border d-flex align-items-center justify-content-center">
															<img class="img-fluid m-1" src="~/content/assets/img/icons/google-logo.svg" alt="Facebook">
														</a>
													</div>
													


												</div>
											</div>
										</div>
										<div class="mt-5 pb-4 text-center">
											<p class="mb-0 text-gray-9">Copyright &copy; 2025 - PharmaSuits</p>
										</div>
									</div>
								</form>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- /Main Wrapper -->
	<!-- jQuery -->
	<script src="~/content/assets/js/jquery-3.7.1.min.js"></script>

	<!-- Bootstrap Core JS -->
	<script src="~/content/assets/js/bootstrap.bundle.min.js"></script>

	<!-- Feather Icon JS -->
	<script src="~/content/assets/js/feather.min.js"></script>

	<!-- Custom JS -->
	<script src="~/content/assets/js/script.js"></script>

</body>

</html>